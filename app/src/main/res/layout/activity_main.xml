<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lbqm.longbeachquickmenu.MainActivity"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="189dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/BeachsideMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp" />

    <Button
        android:id="@+id/dateViewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CalendarViewButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/CalendarViewButton"
        android:background="@drawable/button_bg"
        android:text="@string/february_13th_12_44" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:hint="@string/search"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/editText" />


    <Button
        android:id="@+id/BeachsideMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:layout_marginTop="12dp"
        android:background="#B3E5FC"
        android:padding="45dp"
        android:text="@string/beachside_menu"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/HillsideMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/BeachsideMenu"
        android:background="#B2DFDB"
        android:padding="45dp"
        android:text="@string/hillside_menu"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/ParksideMenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/HillsideMenu"
        android:background="#FFCCBC"
        android:padding="45dp"
        android:text="@string/parkside_menu"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/CampusViewButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="190dp"
        android:layout_marginRight="190dp"
        android:background="@drawable/button_bg"
        android:text="@string/campus" />

    <Button
        android:id="@+id/CalendarViewButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/spinner"
        android:layout_toRightOf="@+id/spinner"
        android:background="@drawable/button_bg"
        android:text="@string/calendar" />



</RelativeLayout>
